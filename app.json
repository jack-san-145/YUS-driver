{
  "expo": {
    "name": "YUS-Driver",
    "slug": "YUS-Driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "foregroundService": {
        "notificationTitle": "Drive Tracker Active",
        "notificationBody": "YUS Driver is sharing your location in the background.",
        "notificationColor": "#4CAF50"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Allow YUS Driver to access your location at all times so we can share your live bus position."
        }
      ]
    ]
  }
}
